    line-height: 22px;
    margin-right: 5%;
    text-align: center;
    width: 45%;
  }
  
  aside { 
    float: left; width: 50%;
    transition: all 0.5s;
    
    &:last-child { 
      text-align: right; 
    }
}

@media (max-width:768px) {
  .bar {
    aside { 
