<div class="container">
    <h1>Register a Student</h1>
    <form action="/students/register" method="POST">
        <div class="input-group">
            <label for="studentName">Student Name</label>
            <input type="text" id="studentName" name="studentName" required>
        </div>
        <div class="input-group">
            <label for="registerNumber">Register Number</label>
            <input type="text" id="registerNumber" name="registerNumber" required>
        </div>
        <div class="input-group">
            <label for="standard">Standard</label>
            <input type="text" id="standard" name="standard" required>
        </div>
        <div class="input-group">
            <label for="division">Division</label>
            <input type="text" id="division" name="division" required>
        </div>
        <button type="submit" class="button">Register Student</button>
    </form>
</div>